{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":disableRateLimiting"
  ],
  "flux": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Disable docker image update of flux, we use flux manager to update it",
      "matchPackagePatterns": [
        "^ghcr.io/fluxcd/.*"
      ],
      "enabled": false
    }
  ],
  "regexManagers": [
    {
      "description": "Update Jenkins image",
      "fileMatch": [
        "jenkins\\.yaml$"
      ],
      "matchStrings": [
        "tag: (?<currentValue>.*)\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "hmctspublic.azurecr.io/jenkins/jenkins",
      "versioningTemplate": "maven"
    },
    {
      "description": "Update Jenkins image gallery version",
      "fileMatch": [
        "jenkins\\.yaml$"
      ],
      "matchStrings": [
        "galleryImageVersion: \"(?<currentValue>.*)\"\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hmcts/jenkins-packer",
      "versioningTemplate": "maven"
    }
  ],
  "commitMessageSuffix": "in {{parentDir}}",
  "additionalBranchPrefix": "{{parentDir}}-"
}
