{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [":disableRateLimiting"],
  "flux": {
    "fileMatch": ["\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "description": "Disable docker image update of flux, we use flux manager to update it",
      "matchPackagePatterns": ["^ghcr.io/fluxcd/.*"],
      "enabled": false
    }
  ],
  "regexManagers": [
    {
      "description": "Update Jenkins image",
      "fileMatch": [
        "\\.yaml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)(?: versioning=(?<versioning>[a-z-]+?))?\\s+.+tag: (?<currentValue>.*)\\s+"
      ]
    }
  ],
  "commitMessageSuffix": "in {{parentDir}}",
  "additionalBranchPrefix": "{{parentDir}}-"
}
